@page "/auth/reg"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
				 <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="login100-form validate-form flex-sb flex-w">
					<span class="login100-form-title p-b-32">
						Регистрация
					</span>

					<span class="txt1 p-b-11" style="margin: 0 auto; color:red; display: block;">
						<span asp-validation-for="Input.Email" style="color:red;" class="text-danger"></span>
						<span asp-validation-for="Input.Password" style="color:red;" class="text-danger"></span>
						<span asp-validation-for="Input.ConfirmPassword" style="color:red;" class="text-danger"></span>
					</span>

					<span class="txt1 p-b-11" style="display: block;">
						Логин
					</span>
					<div class="wrap-input100 validate-input m-b-36" data-validate = "Username is required">
						<input asp-for="Input.Email" autocomplete="username" aria-required="true" style="border:0px!important;" class="input100" placeholder=""/>
						<span class="focus-input100"></span>
					</div>
					<span class="txt1 p-b-11">
						Пароль
					</span>
					<div class="wrap-input100 validate-input m-b-12" data-validate = "Password is required">
		@*				<span class="btn-show-pass" @onclick="ShowPass">
							<i class="@Eyes"></i>
						</span>*@
						<input asp-for="Input.Password" style="border:0px!important;" class="input100" autocomplete="current-password" aria-required="true" />
						<span class="focus-input100"></span>
					</div>
					
					<span class="txt1 p-b-11">
						Потрите пароль
					</span>
					<div class="wrap-input100 validate-input m-b-12" data-validate = "Password is required">
		@*				<span class="btn-show-pass" @onclick="ShowPass">
							<i class="@Eyes"></i>
						</span>*@
						<input asp-for="Input.ConfirmPassword" style="border:0px!important;" class="input100" autocomplete="current-password" aria-required="true" />
						<span class="focus-input100"></span>
					</div>

					<div class="container-login100-form-btn" style="margin-top:10px;">
						<button id="registerSubmit" type="submit" class="login100-form-btn">
							Зарегистрироваться
						</button>
					</div>

				</form>
			</div>
		</div>
	</div>
	

	<div id="dropDownSelect1"></div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
