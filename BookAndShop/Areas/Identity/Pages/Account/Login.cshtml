@page "/auth/login"
@model LoginModel

@{
	ViewData["Title"] = "Вход";
}
<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
				 <form id="account" method="post" class="login100-form validate-form flex-sb flex-w">
					<span class="login100-form-title p-b-32">
						Авторизация
					</span>

					<span class="txt1 p-b-11">
						Логин
					</span>
					<div class="wrap-input100 validate-input m-b-36" data-validate = "Username is required">
						<input asp-for="Input.Email" autocomplete="username" aria-required="true" style="border:0px!important;" class="input100" placeholder=""/>
						<span class="focus-input100"></span>
					</div>
					<span class="txt1 p-b-11">
						Пароль
					</span>
					<div class="wrap-input100 validate-input m-b-12" data-validate = "Password is required">

						<span class="btn-show-pass" onclick="myFunction()">
													<script src="https://cdn.lordicon.com/xdjxvujz.js"></script>
						<lord-icon
							src="https://cdn.lordicon.com/tyounuzx.json"
							trigger="hover"
							colors="primary:#121331,secondary:#08a88a"
							stroke="40"
							style="width:40px;height:40px">
						</lord-icon>
							@*<i class="bi bi-eye" id="myEye" style="font-size: 25px;"></i>*@
						</span>

						<input asp-for="Input.Password" style="border:0px!important;" class="input100" autocomplete="current-password" aria-required="true" id="myInputPass" type="password"/>
						<span class="focus-input100"></span>
					</div>

					<span class="txt1 p-b-11" style="margin: 0 auto; color:red; display: block;">
						<div asp-validation-summary="All" class="text-danger"></div>
					</span>
					
					<div class="flex-sb-m w-full p-b-48">
						<div class="contact100-form-checkbox"></div>
						<div>
							<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="txt3">
								Создать аккаунт?
							</a>
						</div>
					</div>

					<div class="container-login100-form-btn">
						<button id="login-submit" type="submit" class="login100-form-btn">
							Войти
						</button>
					</div>

				</form>
			</div>
		</div>
	</div>
	

	<div id="dropDownSelect1"></div>
	<script>
		function myFunction() {
		  var x = document.getElementById("myInputPass");
		  var z = document.getElementById("myEye");
		  if (x.type === "password") {
			x.type = "text";
			z.className = "bi bi-eye-slash";
		  } else {
			x.type = "password";
			z.className = "bi bi-eye";
		  }
		}
	</script>
	@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}